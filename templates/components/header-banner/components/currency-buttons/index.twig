{% set currencies = [
  {
    url: '/',
    value: 'UK',
    label: 'GB',
  },
  {
    url: '/',
    value: 'US',
    label: 'USD'
  }
] %}

<div class="l-flex currency-buttons">
  {% for currency in currencies %}
    <div class="currency-buttons__item">
      {% include 'components/small-button' with {
      url: currency.url,
        value: currency.value,
        label: currency.label,
      } %}
    </div>
  {% endfor %}
</div>
